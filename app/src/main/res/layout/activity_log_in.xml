<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_log_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_vertical"
    android:background="@drawable/fsme_bg3"
    tools:context="com.power2sme.fsme.finansme.LogInActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail Address"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textColorHint="#C87533">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:textSize="16dp"
            android:background="@drawable/login_fields_bg"
            android:textColor="@android:color/white"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android.support.design:passwordToggleEnabled="true"
        android.support.design:passwordToggleTint="@android:color/white"
        android:textColorHint="#FFD700">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:inputType="textPassword"
            android:textSize="16dp"
            android:background="@drawable/login_fields_bg"
            android:textColor="@android:color/white"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Login Now"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textStyle="normal"
        android:textColor="#99FFFFFF"
        android:background="@drawable/login_button_bg"/>
</LinearLayout>
