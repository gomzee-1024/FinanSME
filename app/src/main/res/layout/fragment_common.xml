<android.support.v4.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.power2sme.fsme.finansme.MyAccountFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0E0E0"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            card_view:cardBackgroundColor="@color/loans_accepted"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/loans_approved_text"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="24dp"
                    android:text="Loans Approved"
                    android:textSize="20sp"
                    android:textColor="@color/loans_approved_text"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/loans_approved_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_width="140dp"
                    android:paddingTop="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/loans_approved"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="140dp"
                    android:layout_alignLeft="@+id/loans_approved_icon"
                    android:background="@color/loans_approved_text"/>
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="70sp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            card_view:cardBackgroundColor="@color/loans_require_input"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/loans_require_input_text"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="24dp"
                    android:text="Loans Requiring \nInput"
                    android:textSize="20sp"
                    android:textColor="@color/loans_require_input_text"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/loans_require_input_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_width="140dp"
                    android:paddingTop="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/loans_requiring_input"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="140dp"
                    android:layout_alignLeft="@+id/loans_require_input_icon"
                    android:background="@color/loans_require_input_text"/>
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/loans_require_input_text"
                    android:text="2"
                    android:textSize="70sp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            card_view:cardBackgroundColor="@color/loans_rejected"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/loans_rejected_text"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="24dp"
                    android:text="Loans Rejected"
                    android:textSize="20sp"
                    android:textColor="@color/loans_rejected_text"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/loans_rejected_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_width="140dp"
                    android:paddingTop="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/loans_rejected"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="140dp"
                    android:layout_alignLeft="@+id/loans_rejected_icon"
                    android:background="@color/loans_rejected_text"/>
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/loans_rejected_text"
                    android:text="2"
                    android:textSize="70sp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            card_view:cardBackgroundColor="@color/loans_in_process"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/loans_in_process_text"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="24dp"
                    android:text="Loans in Process"
                    android:textSize="20sp"
                    android:textColor="@color/loans_in_process_text"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/loans_in_process_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_width="140dp"
                    android:paddingTop="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/loans_in_process"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="140dp"
                    android:layout_alignLeft="@+id/loans_in_process_icon"
                    android:background="@color/loans_in_process_text"/>
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/loans_in_process_text"
                    android:text="2"
                    android:textSize="70sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>