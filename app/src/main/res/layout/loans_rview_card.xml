<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="120dp"
    android:layout_margin="4dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/loan_icon"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:src="@drawable/loans_approved"/>
        <TextView
            android:id="@+id/loans_count"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:layout_alignParentEnd="true"
            android:text="4"
            android:textColor="@color/loans_approved_text"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/primary_text"
            android:layout_below="@+id/loan_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Loans Approved"
            android:textAppearance="?attr/textAppearanceListItem"/>
        <TextView
            android:id="@+id/secondary_text"
            android:layout_below="@+id/primary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Loans which are approved till now"
            android:textSize="12sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>